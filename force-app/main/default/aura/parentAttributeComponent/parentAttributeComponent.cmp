<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="name1" type="String" />
    <aura:attribute name="name2" type="String" />
    <lightning:input type="text" label="Enter First Name" value="{!v.name1}"/>
    <lightning:input type="text" label="Enter Last Name" value="{!v.name2}"/>
    <c:childAttributeComponent firstName="{!v.name1}" lastName="{!v.name2}"/>
</aura:component>